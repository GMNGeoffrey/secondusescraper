  "version": "0.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "once": ". ./load_secret.sh && npx env-cmd -f .env.json node index.js",
    "local": ". ./load_secret.sh && npx env-cmd -f .env.json npx functions-framework --target=scrape --signature-type=cloudevent",
    "trigger": "curl localhost:8080 -X POST -H 'Content-Type: application/json' -H 'ce-id: 123451234512345' -H 'ce-specversion: 1.0' -H 'ce-time: 2020-01-02T12:34:56.789Z' -H 'ce-type: google.cloud.pubsub.topic.v1.messagePublished' -H 'ce-source: //pubsub.googleapis.com/projects/gcmn-salvage-scraper/topics/salvage-scraper-schedule'",
    "deploy": "gcloud functions deploy salvage-scraper --gen2 --entry-point=scrape --region=us-central1 --runtime nodejs18 --env-vars-file .env.json --set-secrets 'GMAIL_APP_PASSWORD=gmail-app-password:latest' --project=gcmn-salvage-scraper --trigger-topic=salvage-scraper-schedule --service-account=scraper-bot@gcmn-salvage-scraper.iam.gserviceaccount.com"
  },
